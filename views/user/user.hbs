<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" style="width: 350px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit">
          <button type="button" class="btn btn-primary">edit</button>
        </a>
      </div>
    </div>
  </div>
</div>